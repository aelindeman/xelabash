startup_message off
autodetach on
defscrollback 10000

shell -$SHELL

setenv LOCKPRG /bin/true

term xterm-256color
attrcolor b ".I"
termcapinfo xterm*|rxvt* ti@:te@
termcapinfo xterm* "hs:ts=\E]0;:fs=\007:ds=\E]0;screen\007"
termcapinfo xterm* 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
defbce on
altscreen on
nonblock on

backtick 0 30 30 sh -c 'screen -ls | grep --color=no -o "$PPID[^[:space:]]*"'
hardstatus alwaysfirstline "%{= bw}%-w%{=br}%n %t%{-}%+w%=%`  %0C%a"
